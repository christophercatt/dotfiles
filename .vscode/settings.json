{
  // Meta
  "workbench.startupEditor": "none",
  "editor.accessibilitySupport": "off",
  "workbench.settings.editor": "json",
  "workbench.editor.enablePreview": false,
  "json.maxItemsComputed": 500000,
  "debug.autoExpandLazyVariables": true,
  "security.workspace.trust.untrustedFiles": "open",

  // Theme
  "workbench.colorTheme": "Gruvbox Dark Hard",
  "workbench.iconTheme": "quill-icons-minimal",
  "workbench.colorCustomizations": {
    "focusBorder": "#101010"
  },
  "editor.roundedSelection": false,
  "editor.fontLigatures": true,
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "name": "String, Symbols, Inherited Class",
        "scope": [
          "string",
          "constant.other.symbol",
          "constant.other.key",
          "meta.group.braces.curly constant.other.object.key.js string.unquoted.label.js"
        ],
        "settings": {
          "foreground": "#A0A0A0"
        }
      },
      {
        "name": "CSS ID's",
        "scope": [
          "source.sass keyword.control",
          "meta.attribute-selector.scss"
        ],
        "settings": {
          "foreground": "#A0A0A0"
        }
      },
      {
        "name": "Inserted",
        "scope": ["markup.inserted"],
        "settings": {
          "foreground": "#FFFFFF"
        }
      }
    ]
  },
  "apc.activityBar": {
    "size": 48,
    "itemSize": 36,
    "itemMargin": 10
  },
  "apc.monospace.font.family": "Geist Mono",
  "apc.statusBar": {
    "position": "bottom",
    "height": 26,
    "fontSize": 12
  },
  "apc.listRow": {
    "height": 24,
    "fontSize": 12
  },
  "apc.header": {
    "height": 28
  },
  "apc.stylesheet": {
    // ".monaco-workbench .part.sidebar .title-actions .actions-container": "justify-content: flex-start; padding-left: 6px !important",
    // ".monaco-list-rows": "padding-left: 12px !important",
    // ".part.sidebar .search-view .monaco-count-badge": "margin-right: 12px !important",
    // ".part.sidebar .search-view .monaco-toolbar": "margin-right: 12px !important",
    // ".scm-viewlet .monaco-list-rows": "padding-left: 0px !important; height: 100% !important",
    // ".scm-viewlet .monaco-list-rows .monaco-list-row:nth-child(2)": "margin-top: 10px !important",
    // ".scm-viewlet .monaco-list-rows .monaco-list-row:not(:nth-child(-n + 2))": "margin-top: 15px !important",
    // ".tabs-container": "display: none !important",

    // file tabs

    ".tabs-container": "gap: 2px !important",
    ".tabs-container > .tab": "border-radius: 5px 5px 0 0 !important",
    ".tabs-container > .tab a": "font-size: 11px !important",
    ".tabs-container > .tab:hover": "background-color: rgba(50, 48, 47, 0.4) !important",
    ".tabs-container > .tab.active:hover": "background-color: rgba(50, 48, 47, 1) !important",
    ".tabs-container > .tab > .tab-actions li:hover a": "background-color: rgba(50, 48, 47, 1) !important",
    ".tabs-container > .tab.active > .tab-actions li:hover a": "background-color: rgba(30, 32, 33, 0.4) !important",

    // activity bar

    ".actions-container > .action-item > .active-item-indicator": "display: none !important",
    ".content > div > .monaco-action-bar": "margin-bottom: 10px !important",
    ".content .actions-container > li > a": "border-radius: 7px !important",
    ".content .actions-container > li:hover > a": "background-color: rgba(50, 48, 47, 0.5) !important",
    ".content .actions-container > li.checked > a": "background-color: rgba(50, 48, 47, 1) !important",
    ".content .actions-container > li > .badge > .badge-content": "font-size: 0px !important; bottom: 0px !important; transform: scale(0.5) translate(-50%, 25%) !important",

    // file explorer

    ".explorer-folders-view .monaco-list-rows .monaco-list-row div[class*='monaco-decoration-iconBadge--9ieymw']::before": "color: #7c6f64 !important",
    ".explorer-folders-view .monaco-list-rows .monaco-list-row .file-icon::after": "transform: translateX(-25%) !important",
    ".explorer-folders-view .monaco-list-rows": "margin: 0 10px 0 10px !important",
    ".explorer-folders-view .monaco-list-rows .monaco-list-row": "border-radius: 4px !important; width: calc(100% - 20px) !important",
    ".explorer-folders-view .monaco-list-rows .selected": "outline: none !important",
    ".monaco-workbench .part.sidebar .title-actions": "padding: 0 !important",
    ".monaco-workbench .part.sidebar .title-actions .actions-container": "display: flex !important; width: calc(100% - 20px) !important; justify-content: space-between !important",
    ".monaco-workbench .part.sidebar .title-actions .actions-container .action-item .action-label": "padding: 5px !important",
    ".monaco-workbench .part.sidebar .title-actions .actions-container .action-item .action-label:hover": "background-color: rgba(50, 48, 47, 0.5) !important",

    // scm explorer

    ".scm-viewlet .monaco-list-rows .monaco-list-row": "border-radius: 4px !important; width: calc(100% - 20px) !important; transform: translateY(-70px) !important",
    ".scm-viewlet .monaco-list-rows .selected": "outline: none !important",
    ".scm-viewlet .monaco-list-rows": "margin: 0 10px 0 10px !important",
    ".scm-viewlet .monaco-list-rows .force-no-hover": "display: none !important",
    ".scm-viewlet .monaco-list-rows .monaco-list-row .monaco-count-badge": "font-size: 9px !important; padding: 3px !important; background-color: rgba(69, 133, 136, 1) !important; color: rgb(232, 220, 183) !important",
    ".scm-viewlet .monaco-list-rows .monaco-list-row .monaco-tl-indent": "display: none !important",
    ".scm-viewlet .monaco-list-rows .monaco-list-row .monaco-tl-twistie:not(.force-twistie)": "display: none !important",
    ".scm-viewlet .monaco-list-rows .monaco-list-row .force-twistie": "padding-left: 0px !important",
    ".scm-viewlet .monaco-list-rows .monaco-list-row .monaco-tl-contents": "padding-left: 4px !important",

    ".scm-viewlet .monaco-list-rows .monaco-list-row:not(.force-twistie) .monaco-tl-contents": "font-size: 11px !important; font-style: italic !important",
    ".scm-viewlet .monaco-list-rows .monaco-list-row:has(.force-twistie) .monaco-tl-contents": "font-size: 13px !important; font-style: normal !important",

    // scrollbar

    ".vertical .scrollbar": "width: 3px !important",
    ".vertical .scrollbar-track": "width: 3px !important",
    ".vertical .scrollbar-thumb": "width: 3px !important",
    ".horizontal .scrollbar": "height: 3px !important",
    ".horizontal .scrollbar-track": "height: 3px !important",
    ".horizontal .scrollbar-thumb": "height: 3px !important",

    // statusbar

    ".statusbar": "color: rgba(232, 220, 183, 0.5) !important",
    ".statusbar a": "font-size: 9px !important",
    ".statusbar a:hover": "background-color: rgba(50, 48, 47, 0.5) !important",

    // basepanel

    ".basepanel .composite-bar-container .action-item": "border-radius: 7px !important; padding: 4px !important; line-height: 0.7em !important",
    ".basepanel .composite-bar-container .action-item .action-label": "font-size: 9px !important",
    ".basepanel .composite-bar-container .action-item:hover": "background-color: rgba(50, 48, 47, 0.5) !important",
    ".basepanel .composite-bar-container .actions-container .checked": "background-color: rgba(50, 48, 47, 1) !important",
    // ".basepanel .title-actions .action-item .action-label": "font-size: 9px !important",

    // misc

    ".sidebar": "height: 100% !important",
    ".title-label": "display: none !important",
    ".inline-tabs-placeholder": "display: none !important",

    // borders

    ".part, .part > .composite": "border-color: rgba(50, 48, 47, 0.6) !important",
    ".tabs-border-bottom::after, .statusbar::after": "background-color: rgba(50, 48, 47, 0.6) !important"
  },

  // Text Editing
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.linkedEditing": true,
  "editor.inlineSuggest.enabled": true,
  "editor.quickSuggestions": {
    "strings": "on"
  },
  "editor.unicodeHighlight.nonBasicASCII": false,
  "editor.tabSize": 2,
  "files.trimTrailingWhitespace": true,
  "[markdown]": {
    "files.trimTrailingWhitespace": false
  },

  // UI
  "editor.fontFamily": "Geist Mono",
  "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font",
  "apc.font.family": "Geist Mono",
  "editor.fontSize": 12,
  "editor.lineHeight": 1.5,
  "editor.scrollbar.vertical": "auto",
  "editor.scrollbar.horizontal": "auto",
  "workbench.tree.renderIndentGuides": "always",
  "workbench.tree.indent": 14,
  "editor.smoothScrolling": true,
  "workbench.list.smoothScrolling": true,
  "explorer.compactFolders": false,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,

  // Editor
  "editor.stickyScroll.enabled": true,
  "gitlens.mode.active": "zen",
  "editor.wordWrap": "on",

  // Language
  "typescript.preferences.importModuleSpecifier": "non-relative",

  // Eslint
  "eslint.options": {
    "extensions": [".js", ".jsx", ".md", ".mdx", ".ts", ".tsx"]
  },
  "eslint.validate": [
    "md",
    "mdx",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],

  // Tailwind
  "tailwind-fold.autoFold": false,
  "tailwind-fold.foldStyle": "QUOTES",
  "tailwind-fold.showTailwindImage": false,
  "tailwind-fold.unfoldedTextOpacity": 0.5,
  "tailwindCSS.experimental.classRegex": [
    ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
    ["cn\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
    ["cx\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"]
  ],

  // Template strings converter
  "template-string-converter.enabled": true,
  "template-string-converter.quoteType": "both",
  "template-string-converter.convertOutermostQuotes": true,
  "template-string-converter.autoRemoveTemplateString": true,
  "template-string-converter.addBracketsToProps": true,

  // Cursor
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": "on",

  // Window
  "window.title": "${rootName}${separator}${activeEditorShort}",

  // Topbar
  "workbench.editor.showTabs": "multiple",
  "breadcrumbs.enabled": false,
  "window.commandCenter": false,
  "workbench.layoutControl.enabled": false,
  "workbench.editor.editorActionsLocation": "hidden",

  // Minimap
  "editor.minimap.renderCharacters": false,
  "editor.hideCursorInOverviewRuler": true,
  "editor.minimap.autohide": true,

  // Git
  "git.openRepositoryInParentFolders": "always",
  "git.autofetch": true,
  "git.confirmNoVerifyCommit": false,
  "git.confirmSync": true,
  "git.ignoreMissingGitWarning": false,

  // Terminal
  "terminal.integrated.gpuAcceleration": "off",
  "terminal.integrated.scrollback": 20000,
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.smoothScrolling": true,

  // File associations
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Path intellisense
  "typescript.suggest.paths": false,
  "javascript.suggest.paths": false,

  // Toggle excluded files
  "files.exclude": {
    "**/.git": false,
    "**/.svn": false,
    "**/.hg": false,
    "**/CVS": false,
    "**/.DS_Store": false,
    "**/Thumbs.db": false,
    "**/node_modules": false,
    "**/.next": false,
    "**/drizzle": false,
    "**/dist": false,
    "**/.todo.md": false,
    "**/.gitignore": false,
    "**/.markdownlint.json": false,
    "**/.markdownlintignore": false,
    "**/.prettierignore": false,
    "**/bun.lockb": false,
    "**/cspell.json": false,
    "**/package-lock.json": false,
    "**/pnpm-lock.yaml": false,
    "**/next-env.d.ts": false,
    "**/postcss.config.cjs": false,
    "**/README.md": false,
    "**/drizzle.config.ts": false,
    "**/migrate.ts": false,
    "**/.env.example": false,
    "**/tsconfig.tsbuildinfo": false
  },
  "supermaven.enable": {
    "*": true
  },
  "workbench.sideBar.location": "right",
  "find-it-faster.general.killTerminalAfterUse": true,
  "find-it-faster.general.clearTerminalAfterUse": true,
  "find-it-faster.general.restoreFocusTerminal": true,
  "find-it-faster.general.hideTerminalAfterFail": true,
  "find-it-faster.general.hideTerminalAfterSuccess": true,
  "prettier.configPath": "",
  "prettier.useEditorConfig": false
}
